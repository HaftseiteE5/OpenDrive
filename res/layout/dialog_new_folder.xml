<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/rlNewFolderTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivNewFolderTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/new_folder_top" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/create_new_folder"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlNewFolderControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rlNewFolderTop"
        android:layout_alignRight="@id/rlNewFolderTop"
        android:layout_below="@id/rlNewFolderTop"
        android:background="@color/white"
        android:paddingBottom="30dp"
        android:paddingTop="30dp" >

        <EditText
            android:id="@+id/etNewFolderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rlNewFolderTop"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_holo_light"
            android:hint="@string/new_folder_hint"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnNewFolderCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/etNewFolderName"
            android:layout_below="@id/etNewFolderName"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_cancel" />
        
        <Button
            android:id="@+id/btnNewFolderOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/etNewFolderName"
            android:layout_below="@id/etNewFolderName"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_ok" />

    </RelativeLayout>


</RelativeLayout>