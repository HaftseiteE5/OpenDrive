<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/llSetting" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:background="@drawable/bg">

	<LinearLayout android:id="@+id/topbarLinearLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="5dp" android:orientation="horizontal" android:background="@drawable/btn_bg" android:gravity="center">
		<ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/title"></ImageView>
	</LinearLayout>

	<ScrollView android:layout_height="fill_parent"
		android:layout_width="fill_parent">

		<LinearLayout android:id="@+id/contentLinearLayout"
			android:orientation="vertical" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:padding="10dp">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal"
				android:layout_margin="10dp" android:gravity="center_vertical">
				<ImageView android:id="@+id/imageView_thumb" android:layout_marginRight="20dp" android:src="@drawable/placeholder" android:layout_height="64dp" android:layout_width="64dp"></ImageView>
				<LinearLayout android:orientation="vertical"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/textView_fileName"
						android:textColor="@color/BLACK_TEXTCOLOR" android:textSize="16dp"
						android:textStyle="bold" android:text="text"
						android:layout_marginBottom="10dp"></TextView>
					<TextView android:text="TextView" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/textView_fileSize"
						android:textColor="@color/BLACK_TEXTCOLOR"></TextView>
					<TextView android:text="TextView" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/textView_modifiedDate"
						android:textColor="@color/BLACK_TEXTCOLOR"></TextView>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginTop="5dp"
				android:background="@drawable/custom_border" android:orientation="vertical">

				<LinearLayout android:id="@+id/linearLayout_preview"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" android:background="@drawable/bg_cell_first">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="Preview"
						android:textColor="@color/BLACK_TEXTCOLOR" android:textStyle="bold"
						android:textSize="16dp"></TextView>
				</LinearLayout>

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="1dp" android:layout_below="@+id/userEditText"
					android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
					android:background="@color/GRAY_BGCOLOR">
				</LinearLayout>

				<LinearLayout android:id="@+id/linearLayout_email"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" android:background="@drawable/bg_cell_midle">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="Email link"
						android:textColor="@color/BLACK_TEXTCOLOR" android:textStyle="bold"
						android:textSize="16dp"></TextView>
				</LinearLayout>

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="1dp" android:layout_below="@+id/spaceEditText"
					android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
					android:background="@color/GRAY_BGCOLOR">
				</LinearLayout>

				<RelativeLayout android:id="@+id/linearLayout_copyLink"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center_vertical" android:paddingBottom="10dp" android:paddingTop="10dp" android:background="@drawable/bg_cell_midle">
					<TextView android:layout_height="wrap_content" android:text="Copy link to clipboard"
						android:textColor="@color/BLACK_TEXTCOLOR" android:textStyle="bold"
						android:textSize="16dp" android:layout_width="wrap_content" android:layout_centerHorizontal="true"></TextView>
					<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView_checkedCopyLink" android:src="@drawable/check_on" android:layout_alignParentRight="true" android:layout_marginRight="20dp"></ImageView>
				</RelativeLayout>

				<LinearLayout android:layout_height="1dp"
					android:background="@color/GRAY_BGCOLOR"
					android:layout_marginRight="2dp" android:layout_width="fill_parent"
					android:layout_marginLeft="2dp"></LinearLayout>

				<LinearLayout android:id="@+id/linearLayout_deleteOfflineFile"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" android:paddingBottom="10dp" android:paddingTop="10dp" android:background="@drawable/bg_cell_midle">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="Delete offline file"
						android:textColor="@color/BLACK_TEXTCOLOR" android:textStyle="bold"
						android:textSize="16dp" android:id="@+id/textView_deleteOfflineFile"></TextView>
				</LinearLayout>

				<LinearLayout android:layout_height="1dp"
					android:background="@color/GRAY_BGCOLOR"
					android:layout_marginRight="2dp" android:layout_width="fill_parent"
					android:layout_marginLeft="2dp"></LinearLayout>

				<LinearLayout android:id="@+id/linearLayout_delete"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center" android:paddingBottom="10dp" android:paddingTop="10dp" android:background="@drawable/bg_cell_last">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="Delete"
						android:textColor="@color/BLACK_TEXTCOLOR" android:textStyle="bold"
						android:textSize="16dp"></TextView>
				</LinearLayout>

			</LinearLayout>


		</LinearLayout>
	</ScrollView>

</LinearLayout>