<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="@string/Account"
            android:textColor="@color/GRAY_BGCOLOR"
            android:textSize="16dp"
            android:textStyle="bold"/>

    <View
            android:layout_width="fill_parent" android:layout_below="@+id/title"
            android:layout_height="2dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@color/GRAY_BGCOLOR"
            />


</RelativeLayout>